        <Button
            AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.3, 0.3"
            AbsoluteLayout.LayoutFlags="All"
            Text="Clique-me" />

        <BoxView
            AbsoluteLayout.LayoutBounds="150, 200"
            HeightRequest="50"
            WidthRequest="50"
            Color="LightBlue" />
        <BoxView
            AbsoluteLayout.LayoutBounds="175, 225"
            HeightRequest="50"
            WidthRequest="50"
            Color="Blue" />
        <BoxView
            AbsoluteLayout.LayoutBounds="200, 250"
            HeightRequest="50"
            WidthRequest="50"
            Color="Green" />
        <BoxView
            AbsoluteLayout.LayoutBounds="225, 275"
            HeightRequest="50"
            WidthRequest="50"
            Color="Yellow" />
        <BoxView
            AbsoluteLayout.LayoutBounds="250, 300"
            HeightRequest="50"
            WidthRequest="50"
            Color="Red" />

    </AbsoluteLayout>
